<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arctro.slipbook.Sync">
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/arc_progress"
        android:background="@color/offwhite"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:arc_progress="55"
        app:arc_bottom_text="SYNCING DATA"
        app:arc_bottom_text_size="15dp"
        app:arc_unfinished_color="@color/scheme2"
        app:arc_finished_color="@color/scheme4"
        app:arc_text_color="@color/scheme3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
